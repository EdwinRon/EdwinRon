import numpy as np 

Nombre = input("¿Cuál es tu nombre?")
print("Hola", Nombre,",","este programa te será muy útil",end=".\n")

C = input("\nIntroduzca Temperatura en Celsius:")
try: 
    F= float(C)*9/5+32
    print("La Temperatura en Fahrenheit es:",F)
    k = float(C)+273.15 
    print("La Temperatura en Kelvin es:",k)
except:
    print("Ingrese una Temperatura Válida") 

Primero = input("\nIntroduzca el primer número:")
Segundo = input("Introduzca el segundo número:")

Suma = int(Primero)+int(Segundo) 
print("SUMA:",Suma)

Resta = float(Primero)-float(Segundo)
print("RESTA:",Resta)

Multiplicación = float(Primero)*float(Segundo)
print("MULTIPLICACIÓN:",Multiplicación)

División = float(Primero)/float(Segundo)
Div = round(División,2)
print("DIVISIÓN:",División)
ParteEntera = float(Primero)//float(Segundo)
print("PARTE ENTERA:",ParteEntera)
Residuo = float(Primero)%float(Segundo)
print("RESIDUO:",Residuo)

Potencia1 = float(Primero)**2 
Potencia2 = float(Segundo)**2 
print("POTENCIA:","R1=",Potencia1,"R2=",Potencia2)

Raiz1 = float(Primero)**0.5
Raiz2 = float(Segundo)**0.5
Red1 = round(Raiz1, 3)
Red2 = round(Raiz2, 3)
print("RAIZ:","R1=",Red1,"R2=",Red2)

